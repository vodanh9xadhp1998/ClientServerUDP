package ObjectStudent;

import java.io.BufferedReader;
import java.io.ByteArrayOutputStream;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.ObjectOutputStream;
import java.net.DatagramPacket;
import java.net.DatagramSocket;
import java.net.InetAddress;
import java.net.InetSocketAddress;
import java.util.ArrayList;
import java.util.Scanner;
 
public class ClientUDP {

    public final static int SERVER_PORT = 9999;
    public final static String SERVER_IP = "127.0.0.1";
    public static void InputData(ArrayList<Student> students) {
		int n;
		Scanner sc = new Scanner(System.in);
		do {
			System.out.print("Ban co muon nhap them khong sinh vien khong..?\n(1)Co\n(0)Khong\nMoi ban chon: ");
			n = sc.nextInt();
			if (n == 1) 
			{
				Student student = new Student();
				student.InputStudent();
				students.add(student);
			}
		} while (n != 0);
	}
    public static void main(String[] args) {
        DatagramSocket ds = null;
        ArrayList<Student> students = new ArrayList<Student>();
        ArrayList<Student> studentskq = new ArrayList<Student>();
        InputData(students);
        try {
            ds = new DatagramSocket(SERVER_PORT);
            System.out.println("Client started ");
            InetAddress server = InetAddress.getByName(SERVER_IP);
            ByteArrayOutputStream bao = new ByteArrayOutputStream();
    		ObjectOutputStream oos = new ObjectOutputStream(bao);
    		oos.writeObject(students);
    		byte[] data = bao.toByteArray();
    		DatagramPacket dps = new DatagramPacket(data, data.length,server,SERVER_PORT);
    		ds.send(dps);
            
        } catch (IOException e) {
            System.err.println(e);
        } finally {
            if (ds != null) {
                ds.close();
            }
        }
    }
}
